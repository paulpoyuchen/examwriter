.container
  .row
    .col-sm-12
      %h1
        Key for
        = link_to @exam.title, exam_path(@exam)
  .row
    %ol
      - @exam.questions.each do |question|
        %li.exam-item
          = question.prompt
          %br
          %strong Answer:
          -if question.type == "TrueFalseQuestion"
            = question.answertf
          -if question.type == "MultipleChoiceQuestion"
            = question.answerm
          -if question.type == "ShortAnswer"
            = question.answer
          -if question.type == "MatchingQuestion"
            = question.answera
            = question.answerb
            = question.answerc
            = question.answerd
